{
  "compilerOptions": {
    "baseUrl": "./js",
    "target": "ES2016",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["ES2016", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["vitest/globals"]
  }
}
